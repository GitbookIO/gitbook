{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**", "dist"]
        },
        "build:cloudflare": {
            "dependsOn": ["^build"]
        },
        "typecheck": {
            "dependsOn": ["^typecheck"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "unit": {
            "dependsOn": ["^unit"]
        },
        "e2e": {
            "dependsOn": ["^e2e"]
        },
        "dev": {
            "persistent": true,
            "cache": false
        }
    }
}
