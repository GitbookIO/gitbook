    "private": true,
    "dependencies": {
        "next": "^15.2.1",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "@gitbook/api": "0.96.1",
        "@gitbook/cache-tags": "workspace:*",
        "@sindresorhus/fnv1a": "^3.1.0",
