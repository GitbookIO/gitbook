{
    "name": "@gitbook/fonts",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "sideEffects": false,
    "version": "0.1.2",
    "dependencies": {
        "@gitbook/api": "catalog:"
    },
    "devDependencies": {
        "bun-types": "catalog:",
        "google-font-metadata": "^6.0.7",
        "tsdown": "catalog:",
        "typescript": "catalog:"
    },
    "scripts": {
        "generate": "bun ./bin/generate.js",
        "build": "tsdown",
        "typecheck": "tsc --noEmit",
        "dev": "bun run build -- --watch ./src",
        "clean": "rm -rf ./dist && rm -rf ./src/data",
        "unit": "bun test",
        "publish-to-npm": "npm publish $(bun pm pack --quiet --dirname ./.publish) --no-workspaces --provenance"
    },
    "files": ["dist", "bin", "README.md", "CHANGELOG.md"],
    "engines": {
        "node": ">=20.0.0"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    }
}
